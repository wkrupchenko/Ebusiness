<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

    <TableRow
    	android:id="@+id/tableRow1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

    	<LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" >

    		<TextView
    			android:id="@+id/task_name"
    			android:layout_width="320dp"
    			android:layout_height="wrap_content"
    			android:hint="enter task name"
    			android:text="Task name"
    			android:textSize="12pt" />

    		<EditText
    			android:id="@+id/edit_task_title"
    			android:layout_width="320dp"
    			android:layout_height="wrap_content"
    			android:inputType="textMultiLine"
    			android:maxLines="5" />

    	</LinearLayout>

    </TableRow>

    <TableRow
    	android:id="@+id/tableRow2"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >

        	<TextView
        		android:id="@+id/passwordRepeatText"
        		android:layout_width="320dp"
        		android:layout_height="wrap_content"
        		android:text="Image"
        		android:textSize="12pt" />
        </LinearLayout>

    </TableRow>

    <ImageView
    	android:id="@+id/task_picture"
    	android:layout_width="240dp"
    	android:layout_height="120dp" />

    <TableRow
    	android:id="@+id/tableRow3"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

        <TextView
        	android:id="@+id/mailText"
        	android:layout_width="320dp"
        	android:layout_height="wrap_content"
        	android:text="Description"
        	android:textSize="12pt" />

    </TableRow>

    <EditText
    	android:id="@+id/edit_task_description"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:ems="10"
    	android:inputType="textMultiLine"
    	android:maxLines="10"
    	android:text="enter task description" />

    <TableRow
    	android:id="@+id/tableRow4"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >

            <TextView
            	android:id="@+id/passwordTextView"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="Completed"
            	android:textSize="12pt" />

            <CheckBox
            	android:id="@+id/checkBox1"
            	android:layout_width="match_parent"
            	android:layout_height="fill_parent" />

        </LinearLayout>

    </TableRow>

    <TableRow
    	android:id="@+id/tableRow5"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >

            <Button
            	android:id="@+id/loginViewLoginButton"
            	android:layout_width="110dp"
            	android:layout_height="wrap_content"
            	android:onClick="showListview"
            	android:text="Save" />

            <Button
            	android:id="@+id/registerViewRegisterButton"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:onClick="showTask"
            	android:text="Show selected task" />

        </LinearLayout>

    </TableRow>

    <TableRow
    	android:id="@+id/tableRow6"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

   <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:baselineAligned="false"
	    tools:context=".Task_Activity" >

       <ImageButton
       	android:id="@+id/imageButton1"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/menu" />
       <Button
           android:id="@+id/backkkkk"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Button" 
           android:onClick="activity_login"
           />

        </LinearLayout>

    </TableRow>

</TableLayout>