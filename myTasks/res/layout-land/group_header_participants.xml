<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey" >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/beige">
 
    <!-- title -->
 
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp" />
    
     <!--  divider 

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/header"
        android:background="@color/white" />
 -->
</RelativeLayout>

<EditText
    android:id="@+id/shareTasklitEmailInsertField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/shareEmailText"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/shareTasklistButton"
    android:ems="10"
    android:inputType="textEmailAddress" />

<Button
    android:id="@+id/shareTasklistButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/shareTasklitEmailInsertField"
    android:layout_alignBottom="@+id/shareTasklitEmailInsertField"
    android:layout_alignParentRight="true"
    android:background="@drawable/round_shape_button"
    android:text="@string/create_tasklist_button_share_text_view"
    android:textColor="@color/white" />

<TextView
    android:id="@+id/shareEmailText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/shareTasklitEmailInsertField"
    android:layout_marginBottom="14dp"
    android:layout_marginRight="206dp"
    android:text="@string/register_mail_text_view" />

</RelativeLayout>