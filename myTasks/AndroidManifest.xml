	package="de.mytasks"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="16"
		android:targetSdkVersion="19" />
	
	 <uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="de.mytasks.activities.LogonActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
     	 android:name="de.mytasks.activities.ListViewExampleActivity"
     	 android:label="@string/app_name">          
 		</activity>
 		<activity
     	 android:name="de.mytasks.activities.TaskActivity"
     	 android:label="@string/app_name">          
 		</activity>
 		<activity
     	 android:name="de.mytasks.activities.RegisterActivity"
     	 android:label="@string/app_name">          
 		</activity>
	</application>

</manifest>
